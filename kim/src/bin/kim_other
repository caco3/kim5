. `kf5-config --prefix`/share/kim/kim_translation

ATTACHMENTS="";
ACTION="$1";
kdeinstdir=`kf5-config --prefix`

case $ACTION in 
	about) 
            kdialog --textbox "$kdeinstdir/share/kim/kim_about.txt" 600 400
            ;;
	license) 
            kdialog --textbox "$kdeinstdir/share/kim/kim_license.txt" 600 400
            ;;
esac

